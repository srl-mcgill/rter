{
	"server": {
		"addr": "",
		"port": 8080,
		"production_mode": false,
		"access_control_allow_origin": "*",
		"secure_mode": false,
		"cert_file": "",
		"key_file": "",
		"session_timeout": 10,
		"session_maxage": 3600000,
		"logfile": "../../data/log/videoserver.log"
	},
	"hack": {
		"disable_port_check": false
	},
	"limits": {
		"max_cpu": 1,
		"max_memory_mbytes": 128,
		"max_ingest_sessions": 10,
		"max_ingest_bandwidth_kbit": 10000,
		"rate_limit_enable": true,
		"rate_limit_ingest_window": 15,
		"rate_limit_ingest_sessions_per_source": 100,
		"rate_limit_ingest_requests_per_session": 30000,
		"rate_limit_ingest_bytes_per_source": 134217728
	},
	"auth": {
		"enabled": false,
		"token_secret": ""
	},
	"ingest": {
		"avc": true,
		"ts": true,
		"chunk": false
	},
	"transcode": {
		"command": "/home/mike/bin/ffmpeg",
		"log_path": "../../data/log",
		"output_path": "../../data",
		"hls": {
			"enabled": true,
			"segment_length": 2
		},
		"dash": {
			"enabled": false,
			"segment_length": 2
		},
		"mp4": {
			"enabled": false
		},
		"ogg":  {
			"enabled": false
		},
		"webm":  {
			"enabled": true
		},
		"webm_hls": {
			"enabled": true,
			"segment_length": 2
		},
		"thumb":  {
			"enabled": true,
			"size": "160x90",
			"step": 2
		},
		"poster":  {
			"enabled": true,
			"size": "auto",
			"count": 1,
			"skip": 10,
			"step": 0
		}
	}
}
